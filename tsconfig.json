{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./dist",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "lib": ["ES6", "es2015", "DOM.Iterable", "ES2016.Array.Include", "ES2017.Object", "DOM.Iterable", "DOM"],
    "module": "esNext",
    "removeComments": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true
  }
}
